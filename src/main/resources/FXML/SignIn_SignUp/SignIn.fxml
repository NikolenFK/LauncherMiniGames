<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #2E3348;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SignIn_SignUp.SignInController">
   <AnchorPane layoutY="100.0" prefHeight="300.0" prefWidth="700.0" style="-fx-background-color: #FAFAFA;">
      <TextField fx:id="loginTextField" depthTest="DISABLE" layoutX="240.0" layoutY="75.0" prefHeight="40.0" prefWidth="220.0" promptText="Login">
         <font>
            <Font name="Consolas" size="20.0" />
         </font>
         <effect>
            <DropShadow>
               <color>
                  <Color red="1.0" />
               </color>
            </DropShadow>
         </effect>
      </TextField>
      <PasswordField fx:id="passwordPasswordField" layoutX="240.0" layoutY="135.0" prefHeight="40.0" prefWidth="220.0" promptText="Password">
         <font>
            <Font name="Consolas" size="20.0" />
         </font>
         <effect>
            <Blend mode="OVERLAY" />
         </effect>
      </PasswordField>
      <Button fx:id="signInButton" layoutX="295.0" layoutY="195.0" mnemonicParsing="false" style="-fx-background-color: #F39C63;" text="Sign In" textFill="WHITE">
         <font>
            <Font name="Consolas" size="20.0" />
         </font>
      </Button>
      <Label layoutX="240.0" layoutY="15.0" text="Authorization" textFill="#898989">
         <font>
            <Font name="Consolas" size="30.0" />
         </font>
      </Label>
   </AnchorPane>
   <Label layoutX="150.0" layoutY="20.0" text="Launcher MiniGames" textFill="#fafafa">
      <font>
         <Font name="Consolas" size="40.0" />
      </font>
   </Label>
   <Button fx:id="signUpButton" layoutX="580.0" layoutY="15.0" mnemonicParsing="false" style="-fx-background-color: #F39C63;" text="Sign Up" textFill="WHITE">
      <font>
         <Font name="Consolas" size="20.0" />
      </font>
   </Button>
</AnchorPane>
